<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    tools:context=".OrderFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại đồ uống"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnOrderALl"

                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_order_loaithucuong"
                    android:drawableLeft="@drawable/cappuchino_icon"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Tất cả"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/btnOrSInhTo"

                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_order_loaithucuong"
                    android:backgroundTint="#F1E3C5"
                    android:drawableLeft="@drawable/cappuchino_icon"
                    android:drawableTint="@color/black"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Sinh tố"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck"/>

                <Button
                    android:id="@+id/btnOrderMt"

                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_order_loaithucuong"
                    android:backgroundTint="#F1E3C5"
                    android:drawableLeft="@drawable/cappuchino_icon"
                    android:drawableTint="@color/black"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Trà sữa"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck"/>

                <Button

                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:id="@+id/btnOrderNuoc"
                    android:background="@drawable/btn_order_loaithucuong"
                    android:backgroundTint="#F1E3C5"
                    android:drawableLeft="@drawable/cappuchino_icon"
                    android:drawableTint="@color/black"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Nước ngọt"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck"/>
                <Button
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/btnOrderCofee"
                    android:textColor="@color/black"
                    android:text="Cà phê"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/cappuchino_icon"
                    android:drawableTint="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_width="110dp"
                    android:background="@drawable/btn_order_loaithucuong"
                    android:backgroundTint="#F1E3C5"
                    android:layout_height="40dp"
                    tools:ignore="TouchTargetSizeCheck"/>

            </LinearLayout>
        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvOrder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</FrameLayout>