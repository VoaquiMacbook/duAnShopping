<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/baogoc"
        android:orientation="vertical"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/itemsanpham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageCart"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:src="@drawable/epdau" />

                <LinearLayout
                    android:id="@+id/lnTrai"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTenSp"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Tên sản phẩm"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            tools:ignore="TextSizeCheck" />

                        <TextView
                            android:id="@+id/tvSize"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Size"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            tools:ignore="TextSizeCheck" />
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvMotaSp"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"

                            android:textColor="@color/black"
                            android:textSize="15dp"
                            tools:ignore="TextSizeCheck" />


                        <LinearLayout
                            android:id="@+id/lntohop"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnTru"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/shape_itemorder_bogoc"
                                android:backgroundTint="#F1E3C5"
                                android:gravity="center_horizontal"
                                android:text="-"
                                android:textSize="25dp"
                                android:textStyle="bold"
                                tools:ignore="TouchTargetSizeCheck" />

                            <TextView
                                android:id="@+id/edtSL"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@color/white"
                                android:text="1"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                            <Button
                                android:id="@+id/btnThem"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/shape_itemorder_bogoc"
                                android:backgroundTint="#F1E3C5"
                                android:gravity="center_horizontal"
                                android:text="+"
                                android:textSize="25dp"
                                tools:ignore="TouchTargetSizeCheck" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvGiaSp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="giá tiền"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>

